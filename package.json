{
    "name": "dwncrwlr",
    "version": "0.1.0",
    "description": "Markdown to HTML static site generator using EJS templates and front-matter.",
    "main": "index.js",
    "bin": {
        "dwncrwlr": "./scripts/dwncrwlr.js"
    },
    "scripts": {
        "build": "npm run styles && npm run generate",
        "build:ts": "npm run styles && npm run generate:ts",
        "build:dev": "npm run styles && npm run generate && npm run serve",
        "styles": "node-sass ./src/styles/scss/index.scss ./src/assets/css/styles.css",
        "styles:watch": "node-sass --watch ./src/styles/scss/index.scss ./src/assets/css/styles.css",
        "generate": "node ./scripts/dwncrwlr.js",
        "generate:ts": "node ./typescript/dwncrwlr.js",
        "watch": "watch 'npm run build' ./src",
        "serve": "serve ./dist"
    },
    "keywords": [],
    "author": "Christian Silfang",
    "license": "MIT",
    "devDependencies": {
        "@types/fs-extra": "^5.0.4",
        "@types/node": "^10.12.9",
        "cross-env": "^5.2.0",
        "ejs": "^2.6.1",
        "front-matter": "^3.0.1",
        "fs-extra": "^7.0.1",
        "glob": "^7.1.3",
        "moment": "^2.22.2",
        "node-sass": "^4.10.0",
        "serve": "^10.0.2",
        "showdown": "^1.9.0",
        "watch": "^1.0.2"
    },
    "repository": "https://github.com/comcy/DWNCRWLR.git",
    "dependencies": {}
}
