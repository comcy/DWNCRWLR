{
    "name": "dwncrwlr",
    "version": "0.1.0",
    "description": "Static site generator which generates EJS suppored HTML files from Markdown, HTML and EJS input.",
    "main": "dwncrwlr.js",
    "bin": {
        "crwldwn": "./dwncrwlr.js"
    },
    "scripts": {
        "build": "npm run tsc && npm run styles && gulp",
        "build:dev": "npm run tsc && npm run styles && npm run generate:ts",
        "styles": "node-sass ./websrc/styles/scss/index.scss ./websrc/assets/css/styles.css",
        "generate:ts": "node ./src/dwncrwlr.js",
        "watch": "watch 'npm run build' ./src",
        "tsc": "tsc",
        "tsc:watch": "tsc -w",
        "serve": "serve ./publish"
    },
    "keywords": [],
    "author": "Christian Silfang (comcy)",
    "license": "MIT",
    "devDependencies": {
        "@types/fs-extra": "^5.0.4",
        "@types/node": "^10.12.9",
        "cross-env": "^5.2.0",
        "del": "^3.0.0",
        "gulp": "^3.9.1",
        "gulp-tslint": "^8.1.3",
        "gulp-typescript": "^5.0.0-alpha.3",
        "node-sass": "^4.10.0",
        "serve": "^10.0.2",
        "watch": "^1.0.2"
    },
    "dependencies": {
        "ejs": "^2.6.1",
        "front-matter": "^3.0.1",
        "fs-extra": "^7.0.1",
        "glob": "^7.1.3",
        "moment": "^2.22.2",
        "showdown": "^1.9.0"
    },
    "repository": "https://github.com/comcy/DWNCRWLR.git"
}