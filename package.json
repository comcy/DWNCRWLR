{
  "name": "dwncrwlr",
  "version": "0.7.0",
  "description": "Static site generator which generates EJS suppored HTML files from Markdown, HTML and EJS input.",
  "main": "./dwncrwlr.js",
  "bin": {
    "crwldwn": "./dwncrwlr.js"
  },
  "scripts": {
    "build": "npm run styles && gulp && npm run clean-package",
    "build:qa": "npm test && npm run tslint && npm run styles && gulp && npm run clean-package",
    "clean-package": "node ./buildtools/cleanup-package.js",
    "dev:js": "npm run tsc && npm run styles && npm run dwncrwlr:js",
    "dev:ts": "npm run styles && npm run dwncrwlr:ts",
    "styles": "node-sass ./styles/scss/index.scss ./styles/css/styles.css",
    "styles:assets": "node-sass ./styles/scss/index.scss ./assets/css/styles.css",
    "dwncrwlr:js": "npm run styles:assets && node ./dist/dwncrwlr.js",
    "dwncrwlr:ts": "npm run styles:assets && ts-node ./src/dwncrwlr.ts",
    "watch": "watch 'npm run build' ./src",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "serve": "serve ./publish",
    "test": "ts-node node_modules/jasmine/bin/jasmine",
    "tslint": "tslint -p ./tsconfig.json -c ./tslint.json"
  },
  "keywords": [],
  "author": "Christian Silfang (comcy)",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jasmine": "^3.3.1",
    "@types/jest": "^24.0.6",
    "@types/node": "^10.12.9",
    "cross-env": "^5.2.0",
    "del": "^3.0.0",
    "fs": "0.0.1-security",
    "gulp": "^3.9.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^5.0.0-alpha.3",
    "jasmine": "^3.3.1",
    "jasmine-core": "^3.3.0",
    "jasmine-reporters": "^2.3.2",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-trx-reporter": "^2.2.2",
    "jasmine-ts": "^0.3.0",
    "jest": "^24.1.0",
    "nlf": "^2.0.1",
    "node-sass": "^4.10.0",
    "serve": "^10.0.2",
    "standard-version": "^4.4.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "ejs": "^2.6.1",
    "front-matter": "^3.0.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "minimist": "^1.2.0",
    "moment": "^2.22.2",
    "npm": "^6.6.0",
    "showdown": "^1.9.0"
  },
  "peerDependencies": {
    "ejs": "^2.6.1",
    "front-matter": "^3.0.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "minimist": "^1.2.0",
    "moment": "^2.22.2",
    "npm": "^6.6.0",
    "showdown": "^1.9.0"
  },
  "repository": "https://github.com/comcy/DWNCRWLR.git"
}
