 {
    "extends": "tslint:recommended",
    "_rulesDirectory": ["./tslint-config/", "another/path/"],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "functions": "never"
                },
                "singleline": "never"
            }
        ],
        "new-parens": true,
        "arrow-parens": [true, "ban-single-arg-parens"]
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        }
    }
}
