{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ],
        "types": [
            "jasmine",
            "node"
        ]
    },
    "include": [
        "**/*.spec.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "scripts",
        "src"
    ],
}